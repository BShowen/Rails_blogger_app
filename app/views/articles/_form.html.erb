<%= form_for(@article) do |f| %>
    <ul>
        <% @article.errors.full_messages.each do |error| %>
            <li><%= error %></li>
        <% end %>
    </ul>
    <p>
        <%= f.label :title, 'Blog Title' %><br />
        <%= f.text_field :title %>
    </p>
    <p>
        <%= f.label :body, 'Blog Content' %><br />
        <%= f.text_area :body %>
    </p>
    <p>
        <%= f.submit %>
    </p>
<% end %>
<%= link_to 'Cancel', articles_path %>