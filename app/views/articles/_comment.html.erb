<div> 
    <h4><%= comment.author_name %> says...</h4>
    <p>Posted <%= distance_of_time_in_words(comment.article.created_at, comment.created_at) %> later</p>
    <p class='comment'><%= comment.body %></p>
    <% if current_user %>
        <%= link_to 'Edit', edit_article_comment_path(comment.id) %>
        <%= link_to 'Delete', article_comment_path(comment.id), method: :delete %>
    <% end %>
</div>